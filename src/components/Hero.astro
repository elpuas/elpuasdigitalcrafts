---
import Button from './Button.astro';

interface Props {
    buttonLabel: string;
    buttonHref: string;
}

const { 
    buttonLabel = "Learn More",
    buttonHref = "/about"
} = Astro.props;
---

<section class="hero">
    <slot /> <!-- This allows passing any content -->
    <Button href={buttonHref} className="primary" label={buttonLabel} />
</section>

<style>
    .hero {
        display: flex;
        flex-direction: column;

        .h5 {
            text-transform: uppercase;
            font-weight: var(--elpuas-preset-fontweight-regular);
            letter-spacing: normal;
        }

        p,
        strong {
            font-size: var(--elpuas-preset-fontsize-h1);
            font-weight: var(--elpuas-preset-fontweight-bold);
            letter-spacing: -3.5px;
            line-height: 1.25;
            margin: var(--elpuas-preset-margin-xl) 0;
        }

        strong {
            color: var(--elpuas-preset-color-tertiary);
        }
    }

    .hero {
        p {
            max-width: 100%;
        }
    }

    @container main ( width > 768px ) {
        .hero {
            p {
                max-width: 70%;
            }
        }
    }
</style>