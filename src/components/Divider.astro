---
interface Props {
    position?: 'left' | 'right';
    flip?: boolean;
}

const { 
    position = 'left',
    flip = false 
} = Astro.props;
---

<div class:list={['divider', `align-${position}`, { 'flip': flip }]}>&nbsp;</div>

<style>
    .divider {
        margin: 113px 0;
        width: 100vw;
        height: 47px;

        &::before {
            content: url("data:image/svg+xml;base64,");
            width: 136px;
            display: block;
            position: absolute;
            height: 47px;
        }

        &:is(.align-left) {
            &::before {
                left: 0;
            }
        }

        &:is(.align-right) {
            &::before {
                right: 0;
            }
        }

        &:is(.flip) {
            &::before {
                transform: rotate(180deg);
            }
        }
    }
</style>