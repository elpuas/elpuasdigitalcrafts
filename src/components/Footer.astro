<style>
    footer {
        .footer-content {
            position: relative;
        } 

        .footer-background {
            position: absolute;
            top: 50%;
            left: 0;
            width: 100%;
            z-index: 1;
            transform: translateY(-50%);

            img {
                max-width: none;
            }
        }

        .footer-content-wrapper {
            max-width: var(--elpuas-preset-content-width);
            height: 100%;
            display: flex;
            align-items: center;
            margin: 0 auto;
            padding-left: var(--elpuas-preset-padding-lg);
            padding-right: var(--elpuas-preset-padding-lg);
