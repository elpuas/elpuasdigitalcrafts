            height: 100%;
            display: flex;
            align-items: center;
            margin: 0 auto;
            padding-left: var(--elpuas-preset-padding-lg);
            padding-right: var(--elpuas-preset-padding-lg);
            align-items: flex-end;
        }

        .footer-content-inner {
            margin-left: auto;

            .contact-info {
                margin-bottom: 2.125rem;

                p {
                    margin: 0;
                    font-size: var(--elpuas-preset-fontsize-h5);
                }
            }

            .social-links {
                display: flex;
                gap: 1rem;
                margin-bottom: 1.5rem;

                a {
                    color: var(--elpuas-preset-text-color, currentColor);
                    transition: color 0.3s ease;

                    &:hover {
                        color: var(--elpuas-preset-primary-color, #666);
                    }

                    svg {
                        width: 24px;
                        height: 24px;
                    }
                }
            }
        }
    }
</style>